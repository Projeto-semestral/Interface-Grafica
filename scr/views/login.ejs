<%-include('header') -%>
<title>Login</title>
<link rel="stylesheet" href="css/login.css" />

<div class="container-login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 offset-md-4 mt-5">
        <p class="text-center">Login</p>
        <form method="post">
          <div class="form-group">
            <label for="login">Usuario</label>
            <input type="text" class="form-control" name="login" id="login" required  placeholder="Usuario">
          </div>
          <div class="form-group">
            <label for="matricula">Matricula</label>
            <input type="text" name="matricula" class="form-control"  required id="matricula" placeholder="Matricula">
          </div>
          <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" name="password" class="form-control" id="password" required  placeholder="Senha">
          </div>
          <button type="submit" name="acao"class="btn w-100 btn-danger btn-block ">Entrar</button>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
</html>